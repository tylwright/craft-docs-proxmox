# Proxmox Configuration
# ====================
# Your Proxmox server address (IP or hostname)
PROXMOX_HOST=192.168.1.100

# Proxmox API port (default: 8006)
PROXMOX_PORT=8006

# Proxmox user - use either root@pam or create a dedicated API user
PROXMOX_USER=root@pam

# API Token Authentication (recommended)
# Create at: Datacenter > Permissions > API Tokens > Add
PROXMOX_TOKEN_NAME=craft-sync
PROXMOX_TOKEN_VALUE=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Alternative: Password Authentication
# PROXMOX_PASSWORD=your-password-here

# SSL Verification (set to true if you have valid certificates)
PROXMOX_VERIFY_SSL=false


# Craft Docs Configuration
# ========================
# Your Craft API endpoint URL
# Get this from: Craft > Imagine tab > Add API Connection
CRAFT_API_URL=https://your-workspace.craft.me/api/connections/your-connection-id

# API Key for authentication (recommended)
# Generate this in your Craft API connection settings
CRAFT_API_KEY=your-api-key-here

# Optional: Parent document ID to nest all synced docs under
# CRAFT_ROOT_DOCUMENT_ID=your-document-id


# Sync Options
# ============
# Include template VMs and containers (default: false)
SYNC_INCLUDE_TEMPLATES=false

# Include stopped VMs and containers (default: true)
SYNC_INCLUDE_STOPPED=true

# Only sync resources with this tag (optional)
# SYNC_TAG_FILTER=production

# Only sync resources from this node (optional)
# SYNC_NODE_FILTER=pve1

# Group resources by: node (default), tag, or status
SYNC_GROUP_BY=node

# Include storage pool information in node sections
SYNC_INCLUDE_STORAGE=false

# Include backup status per resource
SYNC_INCLUDE_BACKUPS=false

# Show alert indicators (default: true)
SYNC_SHOW_ALERTS=true


# Alert Thresholds (optional - these are the defaults)
# ====================================================
# CPU usage percentage to trigger warning/critical alerts
ALERT_CPU_WARNING_THRESHOLD=80.0
ALERT_CPU_CRITICAL_THRESHOLD=95.0

# Memory usage percentage to trigger warning/critical alerts
ALERT_MEMORY_WARNING_THRESHOLD=80.0
ALERT_MEMORY_CRITICAL_THRESHOLD=95.0

# Free storage percentage below which to warn/alert
ALERT_STORAGE_WARNING_THRESHOLD=20.0
ALERT_STORAGE_CRITICAL_THRESHOLD=10.0

# Days without backup to trigger warning/critical alerts
ALERT_BACKUP_WARNING_DAYS=7
ALERT_BACKUP_CRITICAL_DAYS=30

# Show info alerts for stopped resources (default: false)
ALERT_ON_STOPPED=false
